@model Models.Client
@{
    ViewData["Title"] = "Créer un compte";
}

<link rel="stylesheet" href="~/css/register.css" />

<form method="post" asp-action="Register">
    <h2>Créer un compte Client</h2>
    <div>
        <label>Code :</label>
        <input asp-for="Code" readonly />
    </div>
    <div>
        <label>Nom :</label>
        <input asp-for="Nom" required />
    </div>
    <div>
        <label>Téléphone :</label>
        <input asp-for="Telephone" required />
    </div>
    <div>
        <label>Login :</label>
        <input asp-for="Login" required />
        <span asp-validation-for="Login" style="color:red"></span>
    </div>
    <div>
        <label>Mot de passe :</label>
        <input asp-for="Password" type="password" required />
    </div>
    <button type="submit">Créer</button>
    <p>Déjà un compte ? <a asp-action="Index">Se connecter</a></p>
</form>

